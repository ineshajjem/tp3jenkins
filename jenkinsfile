pipeline{
  agent any
  tools {
    maven 'maven'
  }
  
  stages{
    
    stage("Clean up"){
        steps {
          deleteDir()
        }
    }
    
    stage("Clean repo"){
        steps {
          
        }
    }
    
    
    stage("Generate backend image") {
      steps {
        dir("tp3jenkins"){
          sh "mvn clean install"
          sh "docker build -t tp3jenk ."
        }
      }
    }
    
    stage("Run docker compose") {
      steps {
       dir("."){
         sh "docker compose up -d"
       }
      }
    }

    
  }
}
